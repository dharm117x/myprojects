<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Appender definitions go here -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
            	%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger [%X{traceId}] - %msg%n
            </pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>target/log/rest_service.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>rest_service.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory> <!-- keep 30 days of history -->
        </rollingPolicy>
        <encoder>
            <pattern>
				%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger [%X{traceId}] - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- Logger definitions go here -->
    <logger name="com.example.mypackage" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <!-- Root logger definition -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>

</configuration>
